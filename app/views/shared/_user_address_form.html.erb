
<%= form_for(@user, html: { class: "text-left offset-top-30"}) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<fieldset>
			<!-- Address form -->

			<!-- Business-name input-->
			<div class="control-group">
					<label class="control-label">Business Name</label>
					<div class="controls">
							<%= f.text_field :name, class: 'form-control' %>
					</div>
			</div>
			<!-- Business-email-field input-->
			<div class="control-group">
					<label class="control-label">Business Email</label>
					<div class="controls">
							<%= f.email_field :email, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>

			<!-- Business-phone-field input-->
			<div class="control-group">
					<label class="control-label">Business Phone</label>
					<div class="controls">
							<%= f.text_field :phone, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>

			<!-- Password-field input-->
			<div class="control-group">
					<label class="control-label">Password</label>
					<div class="controls">
							<%= f.password_field :password, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>
			<!-- Password confirmation input-->
			<div class="control-group">
					<label class="control-label">Re-enter password</label>
					<div class="controls">
							<%= f.password_field :password_confirmation, class: 'form-control' %>
					</div>
			</div>


			<!-- address-line1 input-->
			<div class="control-group">
					<label class="control-label">Address Line 1</label>
					<div class="controls">
							<%= f.text_field :address_line1, class: 'form-control' %>
							<p class="help-block">Street address, P.O. box, company name, c/o</p>
					</div>
			</div>
			<!-- address-line2 input-->
			<div class="control-group">
					<label class="control-label">Address Line 2</label>
					<div class="controls">
							<%= f.text_field :address_line2, class: 'form-control' %>
							<p class="help-block">Apartment, suite , unit, building, floor, etc.</p>
					</div>
			</div>
			<!-- city input-->
			<div class="control-group">
					<label class="control-label">City / Town</label>
					<div class="controls">
							<%= f.text_field :city, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>
			<!-- region input-->
			<div class="control-group">
					<label class="control-label">State / Province / Region</label>
					<div class="controls">
							<%= f.text_field :region, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>
			<!-- postal-code input-->
			<div class="control-group">
					<label class="control-label">Zip / Postal Code</label>
					<div class="controls">
						<%= f.text_field :postal_code, class: 'form-control' %>
							<p class="help-block"></p>
					</div>
			</div>
			<!-- country select -->
			<div class="control-group category-select-form">
					<label class="control-label">Country</label>
					<div class="controls">
						<%= f.select(:country, options_for_select(@countries, :selected => f.object.country), {:prompt => "please select a country"}, style: 'height: 40px;') %>
					</div>
			</div>

			<%= f.submit "Submit", class: "btn btn-primary" %>
	</fieldset>

<% end %>
