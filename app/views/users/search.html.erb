<!--The is the page returned after user performs category search.-->
<!--Displays menu items matched by category search.-->
<div class="category-search-display">
  <%= render 'shared/back_to_top' %>

  <div style="margin-right: 5%; margin-left: 10%;">

    <div class="row category-show-title">
      <% if @category_title %>
        <h1><%= @category_title %> - Category</h1>
      <% end %>
    </div>

    <div class="row">
      <div>
        <div class="config-c row category-search-main-div">

          <%= render :partial => "shared/search_option" %>

          <%= render :partial => "shared/category_select_search" %>


        </div>

      </div>
    </div>
  </div>

  <div class="" style="margin-top: 30px;">
    <% if @feed_items.any? %>
      <div class="row" style="margin-left: 5%;margin-right: 5%; margin-top: 30px;">
        <%= render :partial=> "users/menu_display/menu_display" %>
        <%= render :partial=> "shared/micropost_modal" %>
      </div>
    <% else %>
       <div class='not-found'>
       <span class="material-icons">search</span>
       No matching items found.
       </div>
    <% end %>
 </div>
</div>
<%# render 'layouts/footer' %>
